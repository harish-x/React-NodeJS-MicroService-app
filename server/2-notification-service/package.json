{
  "name": "jobber-notification-service",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "dev": "nodemon -r tsconfig-paths/register src/app.ts | pino-pretty -c",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json && ts-node tools/copyAssets.ts",
    "start": "pm2 start ./build/src/app.js -i 5 --attach --watch | pino-pretty -c",
    "stop": "pm2 stop all",
    "delete": "pm2 delete all",
    "lint:check": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "test": "jest --coverage=true -w=1 --forceExit --detectOpenHandles --watchAll=false"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@types/amqplib": "^0.10.6",
    "@types/email-templates": "^10.0.4",
    "@types/express": "^5.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/nodemailer": "^6.4.17",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.16.2",
    "@harish-x/jobber-helpers": "^0.1.4",
    "amqplib": "^0.10.5",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "elastic-apm-node": "^4.10.0",
    "email-templates": "^12.0.1",
    "express-async-errors": "^3.1.1",
    "fs-extra": "^11.2.0",
    "http-status-codes": "^2.3.0",
    "jest": "^29.7.0",
    "nodemailer": "^6.9.16",
    "pino-pretty": "^13.0.0",
    "typescript-transform-paths": "^3.5.2",
    "winston": "^3.17.0"
  }
